{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "gulpfile.babel.js",
      ".babelrc",
      ".browserslistrc",
      "package-lock.json",
      "package.json",
      "gulp",
      "src",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(html|js|css|pdf)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      }
    ]
  }
}